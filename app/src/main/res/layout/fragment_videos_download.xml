<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/noDownloadImg"
        android:layout_width="@dimen/_80ssp"
        android:layout_height="@dimen/_80ssp"
        android:background="@drawable/filled_circle_edges_img_bg"
        android:padding="@dimen/_15ssp"
        android:src="@drawable/ic_file_download_black_24dp"
        android:tint="@color/Gray"
        android:layout_centerInParent="true"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/imprima"
        android:gravity="center"
        android:text="@string/nothingInDownloadsStr"
        android:textColor="@color/Gray"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:layout_below="@+id/noDownloadImg"></TextView>
</RelativeLayout>