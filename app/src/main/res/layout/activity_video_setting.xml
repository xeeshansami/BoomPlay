<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MemberShipActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:background="@color/Gray"
            android:gravity="center_vertical|center"></androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_margin="@dimen/_5ssp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:drawableTint="@color/Gray"
            android:fontFamily="@font/imprima"
            android:gravity="left"
            android:text="@string/VideoPlaybackStr"
            android:textColor="@color/Black"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:weightSum="3">

            <ImageView
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@mipmap/ic_history"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/lightGray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/MobileDataUsageStr"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/automaticStr"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                app:trackTint="@color/LightRed"
                app:thumbTint="@color/Red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical"></androidx.appcompat.widget.SwitchCompat>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:drawableTint="@color/Gray"
            android:fontFamily="@font/imprima"
            android:gravity="left"
            android:text="@string/notificationStr"
            android:textColor="@color/Black"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:weightSum="3">

            <ImageView
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@mipmap/ic_history"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:background="@color/lightGray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/allowNotificationStr"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:drawableTint="@color/Gray"
            android:fontFamily="@font/imprima"
            android:gravity="left"
            android:text="@string/downloadStr"
            android:textColor="@color/Black"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:weightSum="3">

            <ImageView
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@mipmap/ic_history"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:background="@color/lightGray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/wifiOnlyStr"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                app:trackTint="@color/LightRed"
                app:thumbTint="@color/Red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical"></androidx.appcompat.widget.SwitchCompat>
        </LinearLayout>
        <LinearLayout
        android:layout_marginTop="@dimen/_2ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray"
        android:weightSum="3">

        <ImageView
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"
            android:src="@mipmap/ic_history"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:background="@color/lightGray"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imprima"
                android:gravity="left"
                android:text="@string/downloadOnlyStr"
                android:textColor="@color/Gray"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imprima"
                android:gravity="left"
                android:text="@string/standardStr"
                android:textColor="@color/Gray"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:weightSum="3">

            <ImageView
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@mipmap/ic_history"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:background="@color/lightGray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/accountStr"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/demoEmailStr"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:drawableTint="@color/Gray"
            android:fontFamily="@font/imprima"
            android:gravity="left"
            android:text="@string/legalStr"
            android:textColor="@color/Black"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:weightSum="3">

            <ImageView
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@mipmap/ic_history"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:background="@color/lightGray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/privacyPolicyStr"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
            <ImageView
                android:layout_gravity="right|center_vertical"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@mipmap/ic_history"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:weightSum="3">

            <ImageView
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@mipmap/ic_history"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:background="@color/lightGray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/termsOfUseStr"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
            <ImageView
                android:layout_gravity="right|center_vertical"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@mipmap/ic_history"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:weightSum="3">

            <ImageView
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@mipmap/ic_history"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:background="@color/lightGray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/helpStr"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
            <ImageView
                android:layout_gravity="right|center_vertical"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@mipmap/ic_history"></ImageView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>