<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <!-- Set the border color of your layout here -->
            <stroke
                android:width="@dimen/_10ssp"
                android:color="@color/Gray" />
            <corners android:radius="@dimen/_50ssp"></corners>
        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item
        android:bottom="@dimen/_4ssp"
        android:left="@dimen/_1ssp"
        android:right="@dimen/_1ssp">
        <shape android:shape="oval">
            <padding
                android:left="10dp"
                android:right="10dp"></padding>
            <solid android:color="@color/White" />
            <corners android:radius="@dimen/_50ssp"></corners>
        </shape>
    </item>

</layer-list>